.Prices
	overflow hidden
	margin-bottom 20px
	
	+from-width(scale[4])
		.PriceGreed:nth-child(1) .Price
			float right

		.PriceGreed:nth-last-child(1) .Price
			float left
	
	.PriceGreed
		+from-width(scale[4])
			column(1/3)
		
		.Price
			margin-top 20px
			margin-h-center()
			width 80%
			+from-width(scale[5])
				width 250px
			+from-width(scale[6])
				width 300px
			color darken(blue, 50%)
			
			>*
				padding 20px
			
			.Header
				background-color #f0ad4e
				color white
				font-size 1.3em
				text-align center

			.Content
				background-color white
				
				.HeadPluses
					color darken(blue, 50%)
					font-size 1.3em

			.Footer
				background rgba(white,40%)
				overflow hidden
				
				.text
					+between(520px,scale[4])
						column(1/2)
						
						.Period
							margin-bottom 0
						
				.btnContainer
					+between(520px,scale[4])
						column(1/2)

				
				.Summ
					font-size 3em
					margin-bottom 18px
					text-align center
					margin-bottom 0px
					
				
				.Period
					font-size 1.4em
					text-align center
					margin-bottom 20px
					opacity 0.7